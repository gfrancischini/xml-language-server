{
    "name": "vscode-languageserver-xml-extension",
    "displayName": "XML Language Server",
    "description": "Visual Studio Code XML Language Server Implementation",
    "version": "0.1.0.pre",
    "license": "MIT",
    "publisher": "Gabriel Parelli Francischini",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Languages"
    ],
    "activationEvents": [
		"onLanguage:xml"
	],
    "languages": [
      {
        "id": "xml",
        "extensions": [
          ".xml"
        ],
        "aliases": [
          "XML"
        ]
      }
    ],
    "main": "./out/src/extension",
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    },
    "dependencies": {
        "vscode-languageclient": "^2.6.3"
    }
}